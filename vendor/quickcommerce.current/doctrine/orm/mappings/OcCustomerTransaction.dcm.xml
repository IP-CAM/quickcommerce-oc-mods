<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="OcCustomerTransaction" table="oc2_customer_transaction">
    <indexes>
      <index name="IDX_F59F93479395C3F3" columns="customer_id"/>
      <index name="IDX_F59F93478D9F6D38" columns="order_id"/>
    </indexes>
    <id name="customerTransactionId" type="integer" column="customer_transaction_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="description" type="text" column="description" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="amount" type="decimal" column="amount" precision="15" scale="4" nullable="false"/>
    <field name="dateAdded" type="datetime" column="date_added" nullable="false"/>
    <many-to-one field="customer" target-entity="OcCustomer" fetch="LAZY">
      <join-columns>
        <join-column name="customer_id" referenced-column-name="customer_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="order" target-entity="OcOrder" fetch="LAZY">
      <join-columns>
        <join-column name="order_id" referenced-column-name="order_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
