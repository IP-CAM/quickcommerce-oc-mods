<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="OcAddress" table="oc2_address">
    <indexes>
      <index name="customer_id" columns="customer_id"/>
      <index name="IDX_BAACDB7FF92F3E70" columns="country_id"/>
      <index name="IDX_BAACDB7F9F2C3FAB" columns="zone_id"/>
    </indexes>
    <id name="addressId" type="integer" column="address_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstname" type="string" column="firstname" length="32" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastname" type="string" column="lastname" length="32" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="company" type="string" column="company" length="40" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="address1" type="string" column="address_1" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="address2" type="string" column="address_2" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="city" type="string" column="city" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="postcode" type="string" column="postcode" length="10" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="customField" type="text" column="custom_field" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="country" target-entity="OcCountry" fetch="LAZY">
      <join-columns>
        <join-column name="country_id" referenced-column-name="country_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="zone" target-entity="OcZone" fetch="LAZY">
      <join-columns>
        <join-column name="zone_id" referenced-column-name="zone_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="customer" target-entity="OcCustomer" fetch="LAZY">
      <join-columns>
        <join-column name="customer_id" referenced-column-name="customer_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
